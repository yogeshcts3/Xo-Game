@model xogame.Models.Billboard;

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Winner Page</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      text-align: center;
      color: white;
      position: relative;
    }

    .container {
      position: relative;
      z-index: 2;
    }

    .congrats {
      font-size: 3em;
      font-weight: bold;
      animation: popUp 1s ease-out forwards;
    }

    .winner-name {
      font-size: 2.5em;
      margin-top: 20px;
      font-weight: bold;
      color: #fff700;
      animation: popUp 1.2s ease-out forwards;
    }

    .draw {
      font-size: 2.5em;
      margin-top: 20px;
      font-weight: bold;
      color: #ff4c4c;
      animation: popUp 1.2s ease-out forwards;
    }

    .winner-image {
      margin-top: 30px;
      width: 200px;
      height: auto;
      border-radius: 20px;
      box-shadow: 0 0 15px rgba(0,0,0,0.3);
      animation: popUp 1.5s ease-out forwards;
    }

    @@keyframes popUp {
      0% { transform: scale(0); opacity: 0; }
      100% { transform: scale(1); opacity: 1; }
    }

    .confetti {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      overflow: hidden;
    }

    .confetti-piece {
      position: absolute;
      width: 10px;
      height: 20px;
      background-color: red;
      animation: fall linear infinite;
    }

    @@keyframes fall {
      0% {
        transform: translateY(-100px) rotate(0deg);
        opacity: 1;
      }
      100% {
        transform: translateY(100vh) rotate(720deg);
        opacity: 0;
      }
    }
  </style>
</head>
<body>

<div class="container">
  <div class="congrats">Congratulations!</div>
        @if (@Model.Holdstring == "All are Equal is proved here , Give HandShake 2 each other")
  {
            <div class="draw">All are Equal is proved here , Give HandShake 2 each other!!!</div>
      <img class="winner-image" src="~/image/Draw.jpg" alt="Draw Image" />
  }
  else
  {
      <div class="winner-name">@Model.Holdstring</div>
      <img class="winner-image" src="/image/win.jpg"
           alt="Winner Image" />
  }
</div>

<div class="confetti" id="confetti-container"></div>

<script>
  const colors = ['#FFC700', '#FF0000', '#2E3191', '#41BBC7', '#7F00FF'];
  const confettiContainer = document.getElementById("confetti-container");

  for (let i = 0; i < 100; i++) {
    let confetti = document.createElement("div");
    confetti.classList.add("confetti-piece");
    confetti.style.left = Math.random() * 100 + "vw";
    confetti.style.animationDuration = (Math.random() * 3 + 2) + "s";
    confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
    confettiContainer.appendChild(confetti);
  }
</script>

</body>
</html>
